<div class="gigs-buttons">
  <h2 class="pg"><%= link_to "Past Gigs", past_gigs_user_gigs_path, class: "link-pg-btn" %></h2>
        <div class="vl-s"></div>
  <h2 class="ug"><%= link_to "Upcoming Gigs", upcoming_gigs_user_gigs_path, class: "link-ug-btn" %></h2>
        <div class="vl-s"></div>
  <h2 class="gg"><%= link_to "Find a Gig", gigs_path, class: "link-gg-btn" %></h2>
</div>

<div class="gigs-container">
  <div class="past-gigs-container" data-controller="checkbox">
    <div class="text-btn">
      <h2 class="pg">Your past gigs</h2>
      <div class="pt-2">
        <%= link_to(dashboard_new_path, class: "primary-button") do %>
        Add a new gig!
        <% end %>
      </div>
    </div>
<!--
    <div class="toggle-box">
      <input type="checkbox" data-checkbox-target="parent" data-action="change->checkbox#toggleChildren">
      <label class="toggle"></label>
    </div> -->

    <div class="past-gigs">
      <% @user_gigs.each do |user_gig| %>
        <% if user_gig.user_id == current_user.id && user_gig.gig.date < DateTime.current %>
            <div class="past-gigs-card">
          <%= link_to user_gig_path(user_gig) do %>
              <% if user_gig.gig.wiki_photo_url != nil %>
                <div class="pg-card-img-wrap"><img src="<%= user_gig.gig.wiki_photo_url %>" class="pg-card-img"></div>
              <% elsif user_gig.gig.photo_url_two != nil %>
                <div class="pg-card-img-wrap"><img src="<%= user_gig.gig.photo_url_two %>" class="pg-card-img"></div>
                  <% elsif user_gig.gig.photo_url_three != nil %>
                <div class="pg-card-img-wrap"><img src="<%= user_gig.gig.photo_url_three %>" class="pg-card-img"></div>
                  <% elsif user_gig.gig.photo_url_four != nil %>
                <div class="pg-card-img-wrap"><img src="<%= user_gig.gig.photo_url_four%>" class="pg-card-img"></div>
                  <% elsif user_gig.gig.photo_url_five != nil %>
                <div class="pg-card-img-wrap"><img src="<%= user_gig.gig.photo_url_five %>" class="pg-card-img"></div>
              <% end %>
              <div class="pg-card-content">
                <div class="artist"><span><i class="fa-solid fa-music"></i> <%= link_to "#{user_gig.gig.artist.titleize}",  user_gig_path(user_gig) %></span></div>
                <div class="vanue"><span><i class="fa-solid fa-location-dot"></i> <%= link_to "#{user_gig.gig.venue.titleize}", user_gig_path(user_gig) %></span></div>
                <div class="date"><span><i class="fa-solid fa-calendar-days"></i> <%= link_to "#{user_gig.gig.date.strftime("%e %b %Y %H:%M")}", user_gig_path(user_gig) %></span></div>
              </div>

              <!-- <div class="toggle-box">
                <input data-id="<%= user_gig.id %>" <%= user_gig.attended ? "checked" : "" %> type="checkbox" data-checkbox-target="child" data-action="change->checkbox#toggleParent">
                <label class="toggle"></label>
              </div> -->

          <% end %>
            </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
