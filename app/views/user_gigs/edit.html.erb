<div class="center-container">
  <h2 class="m-3">Edit your gig</h2>
  <div class="form-signup mb-3">
    <%= simple_form_for (@user_gig) do |f|%>
      <div class="form-inputs">
        <%= f.simple_fields_for :gig do |g|%>
          <%= g.input :name %>
          <%= g.input :artist %>
          <%= g.input :venue %>
          <%= g.input :genre %>
          <%= g.input :date %>
        <% end %>

      <div class="form-actions">
        <div class="form-actions-buttons">
          <%= f.button :submit, "Update" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
