<div class="container">
  <div class="upcoming-user-gig-page">
    <div class="gigs-buttons">
      <h2 class="pg"><%= link_to "Past Gigs", past_gigs_user_gigs_path, class: "link-pg-btn" %></h2>
            <div class="vl-s"></div>
      <h2 class="ug"><%= link_to "Upcoming Gigs", upcoming_gigs_user_gigs_path, class: "link-ug-btn" %></h2>
            <div class="vl-s"></div>
      <h2 class="gg"><%= link_to "Find a Gig", gigs_path, class: "link-gg-btn" %></h2>
    </div>
     <% unless @user_gig.gig.tickets == nil %>
       <a href="<% @user_gig.gig.tickets %>" target="_blank" class= "primary-button-inverse-medium d-inline-flex justify-content-end", id= "create-gig-btn"> buy tickets </a>
     <% end %>
    <div class="upcoming-user-gig-page-main">
      <%# Artist info %>
      <div class="upcoming-user-gig-page-main-left">
        <div class="upcoming-user-gig-page-main-left-about">
          <div class="upcoming-artist-headline d-flex justify-content-between", style="width: 124%;">
            <h2><%= @user_gig.gig.artist %><span> @ </span> <%= @user_gig.gig.venue %></h2>
          </div>

          <p><%= @user_gig.gig.date.strftime("%e %b %Y| %H:%M") unless @user_gig.gig.date == nil %> </p>
            <div class="upcoming-artist-photo">
              <% if @user_gig.gig.wiki_photo_url != nil %>
                <img src="<%= (@user_gig.gig.wiki_photo_url) %>">
              <% elsif @user_gig.gig.photo_url_four != nil %>
                <img src="<%= (@user_gig.gig.photo_url_four) %>">
              <% elsif @user_gig.gig.photo_url_five != nil %>
                <img src="<%= (@user_gig.gig.photo_url_five) %>">
              <% end %>
            </div>

            <div class="upcoming-artist-info mt-2">
              <% if @user_gig.gig.genre != nil %>
                <% if @user_gig.gig.wiki_photo_url == nil %>
                  <p> <strong> <span><%= @user_gig.gig.genre.capitalize %></span> </strong></p>
                <% else %>
                  <p> <strong> <span><%= @user_gig.gig.genre.capitalize %></span> </strong> - <%= @user_gig.gig.artist_info %> </p>
                <% end %>
              <% end %>
              <%# <div class="user-gig-page-main-left-map"> MAP</div> %>
            </div>
        </div>
      </div>

      <%# Photos carousel %>
      <div class="gig-page-main-right">
        <div class="">
          <h3 class="mt-4"> Pics of <%= @user_gig.gig.artist.capitalize %> </h3>
          <div class="carousel-border mt-1 d-flex align-items-center">
            <div id="carouselExampleIndicators" class="carousel slide">
              <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
              </div>
              <div class="carousel-inner w-100 h-100">
                <div class="carousel-item active">
                   <% if @user_gig.gig.photo_url_two != nil %>
                    <img src="<%= (@user_gig.gig.photo_url_two) %>" class="d-block carousel-img">
                  <% elsif @user_gig.gig.photo_url_four != nil %>
                    <img src="<%= (@user_gig.gig.photo_url_four) %>" class="d-block carousel-img">
                  <% elsif @user_gig.gig.photo_url_five != nil %>
                    <img src="<%= (@user_gig.gig.photo_url_five) %>" class="d-block carousel-img">
                  <% end %>
                </div>
                <div class="carousel-item">
                  <% if @user_gig.gig.wiki_photo_url != nil %>
                    <img src="<%= (@user_gig.gig.wiki_photo_url) %>" class="d-block carousel-img">
                  <% elsif @user_gig.gig.photo_url_three != nil %>
                    <img src="<%= (@user_gig.gig.photo_url_three) %>" class="d-block carousel-img">
                  <% elsif @user_gig.gig.photo_url_four != nil %>
                    <img src="<%= (@user_gig.gig.photo_url_four) %>" class="d-block carousel-img">
                  <% end %>
                </div>
                <div class="carousel-item">
                  <% if @user_gig.gig.photo_url_three != nil %>
                    <img src="<%= (@user_gig.gig.photo_url_three) %>" class="d-block carousel-img">
                  <% elsif @user_gig.gig.photo_url_four != nil %>
                    <img src="<%= (@user_gig.gig.photo_url_four) %>" class="d-block carousel-img">
                  <% elsif @user_gig.gig.photo_url_five != nil %>
                    <img src="<%= (@user_gig.gig.photo_url_five) %>" class="d-block carousel-img">
                  <% end %>
                </div>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
        </div>


        <%# Music player %>
        <div class="upcoming-gig-page-main-right">
          <div class="upcoming-user-gig-page-main-right-spotify">
            <div class="upcoming-player-headline d-flex justify-content-center">
              <h2> Listen now </h2> <%= image_tag "logo.png", id:"player-logo"%>
            </div>
            <div class="upcoming-player-card">
              <div class="upcoming-player-container">
                <ul>
                <% if @audio_one != nil %>
                  <div><p> <i class="fa-solid fa-circle"></i> <%= @user_gig.gig.song_one %> <audio id="player" controls> <source src="<%= @audio_one%>" type="audio/mpeg"></audio></p></div>
                <% end %>
                <% if @audio_two != nil %>
                  <div><p> <i class="fa-solid fa-circle"></i> <%=@user_gig.gig.song_two %> <audio id="player" controls> <source src="<%=  @audio_two %>" type="audio/mpeg"> </audio></p></div>
                <% end %>
                <% if @audio_three != nil %>
                  <div><p> <i class="fa-solid fa-circle"></i> <%= @user_gig.gig.song_three %> <audio id="player" controls> <source src="<%=  @audio_three %>" type="audio/mpeg"> </audio></p></div>
                <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>


  <%# Other gigs suggestions %>
  <div class="upcoming-user-gig-page-suggested-title justify-content-center">
    <h4> Suggested <span><%= @user_gig.gig.genre.capitalize unless @user_gig.gig.genre.nil? %></span> gigs </h4>
  </div>

  <div class="container">
    <div class="row mt-4 mb-4 justify-content-center">
      <% unless @other_gigs.length == 1 || @other_gigs.length == 0 %>
        <% @similar_gigs.each do |gig| %>
          <div class="col-lg-4 col-md-6 col-sm-12 p-2">
            <div class="upcoming-user-gig-suggested">
              <% if gig.photo_url_two != nil %>
                <img src="<%= gig.photo_url_two %>" class="upcoming-suggested-artist-image" alt="...">
              <% elsif gig.photo_url_three != nil %>
                <img src="<%=gig.photo_url_three %>" class="upcoming-suggested-artist-image" alt="...">
              <% elsif gig.photo_url_four != nil %>
                <img src="<%= gig.photo_url_four %>" class="upcoming-suggested-artist-image" alt="...">
              <% elsif gig.photo_url_five != nil %>
                <img src="<%= gig.photo_url_five %>" class="upcoming-suggested-artist-image" alt="...">
              <% elsif gig.photo_url_five != nil %>
                <img src="<%= gig.photo_url_five %>" class="upcoming-suggested-artist-image" alt="...">
              <% end %>
              <div class="upcoming-suggested-artist-details d-flex flex-column gap-1">
                <h5 class="card-title"><%= link_to "#{gig.artist.capitalize}", gig_path(gig) %></h3>
                <p>
                <%= link_to "#{gig.venue}", gig_path(gig), class: "span-venue-marker" %>
                <%= link_to "#{gig.date.strftime("%e %b %Y")}", gig_path(gig), class: "card-text" %></p>
                <%# <p><%= link_to "#{gig.genre}", gig_path(gig) %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>


  <div class="container d-flex justify-content-between mb-4">
    <%= link_to "Edit gig", edit_user_gig_path(@user_gig), data: {turbo_frame: "modal"}, class: "primary-button-inverse"%>
    <%= link_to "Remove", user_gig_path(@user_gig), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "warning-button"%>
  </div>
</div>
