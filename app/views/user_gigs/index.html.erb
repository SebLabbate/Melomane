<div class="container">
  <h1>Your upcoming gigs</h1>
    <% @user_gigs.each do |user_gig| %>
      <div class="card-product">
          <div class="card-product-infos">
            <img src="<%= asset_path('Nirvana.jpeg')%>" />
          </div>
          <div>
            <h2><%= user_gig.gig.artist %></h2>
            <p><%= user_gig.gig.date %></p>
            <p><%= user_gig.gig.genre %></p>
            <p><%= user_gig.gig.venue %></p>
          </div>
      </div>
    <% end %>
</div>
