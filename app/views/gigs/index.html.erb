<div class="container">
  <div class="d-flex justify-content-center align-items-center">
    <div class="row mt-4 mb-4">
      <% @gigs.each do |gig| %>
        <% if gig.private == false %>
          <div class="card" style="width: 18rem;">
            <img src="<%= asset_path('Nirvana.jpeg')%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= gig.artist %></h5>
              <p class="card-text"><%= gig.venue %></p>
              <p class="card-text"><%= gig.date.strftime("%e %b %Y %H:%M") %></p>
              <%= link_to "Add to upcoming gigs!", gig_user_gigs_path(gig), data: { turbo_method: :post }, class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
