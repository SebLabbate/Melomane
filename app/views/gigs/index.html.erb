<div class="container">
  <div class="gigs-buttons">
    <h2 class="pg"><%= link_to "Past Gigs", past_gigs_user_gigs_path, class: "link-pg-btn" %></h2>
          <div class="vl-s"></div>
    <h2 class="ug"><%= link_to "Upcoming Gigs", upcoming_gigs_user_gigs_path, class: "link-ug-btn" %></h2>
          <div class="vl-s"></div>
    <h2 class="gg"><%= link_to "Dashboard", dashboard_path, class: "link-gg-btn" %></h2>
  </div>

  <div class="search-box">
     <div class="gig-index-search">
       <%= form_with url: gigs_path, method: :get, class: "d-flex my-3" do %>
         <%= text_field_tag :query,
           params[:query],
           class: "form-control",
           placeholder: "Find a gig"
         %>
         <%= submit_tag "Search", class: "search-btn"%>
       <% end %>
     </div>
  </div>
  <div class="d-flex justify-content-center align-items-center">
    <div class="row mt-4 mb-4">
      <% @gigs.each do |gig| %>
        <% unless gig.private %>
          <div class="gig-index-card" style="">
            <% if gig.wiki_photo_url != nil %>
            <img src="<%= gig.wiki_photo_url %>" class="card-img-top" alt="...">
            <% else %>
            <img src="<%= @pexels_array[0] %>" class="card-img-top" alt="...">
            <% end %>
            <div class="card-body">
              <% if @user_gigs.find { |item| item.gig_id == gig.id } != nil %>
              <% user_gig = @user_gigs.find { |item| item.gig_id == gig.id} %>
               <h5 class="card-title"><%= link_to "#{gig.artist}", user_gig_path(user_gig) %></h5>
              <p class="card-text"> <%= link_to "#{gig.venue.split(',')[0]}", user_gig_path(user_gig) %> &#x2022;
              <%= link_to "#{gig.date.strftime("%d/%m/%Y")}", user_gig_path(user_gig) %></p>
              <% if gig.date < Date.current %>
               <%= link_to "You went!", user_gig_path(user_gig) , class: "gig-card-button" %>
                <% else %>
                <%= link_to "You are going!", user_gig_path(user_gig) , class: "gig-card-button" %>
                <% end %>
              <%else %>
              <h5 class="card-title"><%= link_to "#{gig.artist}", gig_path(gig) %></h5>
              <p class="card-text"> <%= link_to "#{gig.venue.split(',')[0]}", gig_path(gig) %>  &#x2022;
               <%= link_to "#{gig.date.strftime("%d/%m/%Y")}", gig_path(gig) %></p>
              <% if gig.date < Date.current %>
              <%= link_to "Add to past gigs", gig_user_gigs_path(gig), data: {turbo_method: :post}, class: "gig-card-button" %>
              <% else %>
              <%= link_to "Add to upcoming gigs", gig_user_gigs_path(gig), data: {turbo_method: :post}, class: "gig-card-button" %>
              <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
