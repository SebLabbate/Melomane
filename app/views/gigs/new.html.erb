<div class="container">
  <div class="mt-3" style="width: 500px">
    <%= simple_form_for(@gig) do |f| %>
      <%= f.input :name %>
      <%= f.input :artist %>
      <%= f.input :venue %>
      <%= f.input :genre %>
      <%= f.input :date, as: :datetime, order: [:day, :month, :year] %>
      <%= f.input :private %>
      <%= f.submit "Add gig", class: "btn btn-dark justify-content-center" %>
    <% end %>
  </div>
</div>
