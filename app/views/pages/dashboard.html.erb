<div class="container">
  <h2 class="text-center">Dashboard</h2>
  <div class="gigs-container">

    <div class="past">
      <div class="past-gigs">
        <h2 class="ug">Past Gigs</h2>
        <% @user_gigs.each do |user_gig| %>
          <div class="all-past-gigs">
            <% if user_gig.user_id == current_user.id && user_gig.attended == true %>
              <div class="past-gigs-card">
                    <div class="pg-card-img"><img src="<%= asset_path('Nirvana.jpeg') %>" style="width:140px;height:116px"></div>
                    <div class="pg-card-content">
                      <div class="date"><span><i class="fa-solid fa-calendar-days"></i> <%= user_gig.gig.date.strftime("%e %b %Y %H:%M") %></span></div>
                      <div class="artist"><span><i class="fa-solid fa-music"></i> <%= user_gig.gig.artist %></span></div>
                      <div class="vanue"><span><i class="fa-solid fa-location-dot"></i> <%= user_gig.gig.venue %></span></div>
                      <div class="genre"><span><i class="fa-solid fa-guitar"></i> <%= user_gig.gig.genre %></span></div>
                    </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

    <div class="upcoming">
      <div class="upcoming-gigs">
        <h2 class="ug">Upcoming Gigs</h2>
        <% @user_gigs.each do |user_gig| %>
          <div class="all-upcoming-gigs">
            <% if user_gig.user_id == current_user.id && user_gig.gig.date > Date.current %>
              <div class="upcoming-gigs-card">
                    <div class="pg-card-img"><img src="<%= asset_path('Nirvana.jpeg') %>" style="width:140px;height:116px"></div>
                    <div class="pg-card-content">
                      <div class="date"><span><i class="fa-solid fa-calendar-days"></i> <%= user_gig.gig.date.strftime("%e %b %Y %H:%M") %></span></div>
                      <div class="artist"><span><i class="fa-solid fa-music"></i> <%= user_gig.gig.artist %></span></div>
                      <div class="vanue"><span><i class="fa-solid fa-location-dot"></i> <%= user_gig.gig.venue %></span></div>
                      <div class="genre"><span><i class="fa-solid fa-guitar"></i> <%= user_gig.gig.genre %></span></div>
                    </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="pt-2">
    <%= link_to(dashboard_new_path, class: "primary-button") do %>
    Add a new gig!
    <% end %>
  </div>
</div>
