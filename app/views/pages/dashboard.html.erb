<div class="container">
  <h2 class="text-center">Dashboard</h2>
  <div class="gigs-container">

    <div class="past">
      <div class="past-gigs">
        <h2 class="pg">Past Gigs</h2>
        <div class="past-gigs-card">
          <div class="pg-card-img"></div>
          <div class="pg-card-content">
            <div class="date"><span><i class="fa-solid fa-calendar-days"></i> <%= "date" %></span></div>
            <div class="artist"><span><i class="fa-solid fa-music"></i> <%= "artist" %></span></div>
            <div class="vanue"><span><i class="fa-solid fa-location-dot"></i> <%= "vanue" %></span></div>
            <div class="genre"><span><i class="fa-solid fa-guitar"></i> <%= "genre" %></span></div>
          </div>
        </div>
      </div>
    </div>

    <div class="upcoming">
      <div class="upcoming-gigs">
        <h2 class="ug">Upcoming Gigs</h2>
        <div class="upcoming-gigs-card">
          <div class="pg-card-img"></div>
          <div class="pg-card-content">
            <div class="date"><span><i class="fa-solid fa-calendar-days"></i> <%= "date" %></span></div>
            <div class="artist"><span><i class="fa-solid fa-music"></i> <%= "artist" %></span></div>
            <div class="vanue"><span><i class="fa-solid fa-location-dot"></i> <%= "vanue" %></span></div>
            <div class="genre"><span><i class="fa-solid fa-guitar"></i> <%= "genre" %></span></div>
        </div>
      </div>
    </div>
  </div>
</div>
