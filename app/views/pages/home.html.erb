    </div>
  <% end %>
</div>

<!-- sign in / log in section -->
<% if !user_signed_in? %>
  <div class="hp-container-bottom container" id="scroll-point">

    <div class="row justify-content-center" style="gap: 20px;">

      <div class="col-xs-12 col-sm-4">
        <div class="form-signup overlay">
          <h2>Sign up</h2>
          <%= simple_form_for(:user, :url => new_user_registration_path) do |f| %>
            <div class="form-labels">
              <%= f.input :user_name %>
              <%= f.input :email %>
              <%= f.input :password %>
              <%= f.input :password_confirmation %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: "btn primary-btn" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-4">
        <div class="form-login overlay">
          <h2>Log in</h2>
          <%= simple_form_for(:user, :url => session_path(:user)) do |f| %>
            <div class="form-labels">
              <%= f.input :email %>
              <%= f.input :password %>
              <%= f.label :remember_me %>
              <%= f.check_box :remember_me %>
            </div>
            <div class="form-actions">
              <%= f.submit 'Sign in', class: "btn primary-btn" %>
              <%= link_to "Forgot your password?", new_password_path(:user), class: "forgotten-password" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
