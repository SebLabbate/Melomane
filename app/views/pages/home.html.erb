<!-- sign in / log in section -->
<% if !user_signed_in? %>
  <div class="hp-container-bottom container" data-controller="showhide">
      <div class="row justify-content-center" style="gap: 20px;">
        <div style="width 500px d-flex align-items-center">
          <button class="primary-button"
                  style="align-item: flex-start;"
                  data-showhide-target="button"
                  data-action="click->showhide#disable">
            Sign up
          </button>
        </div>

        <div class="col-xs-12 col-sm-4 d-none" data-showhide-target="signup">
          <div class="form-signup overlay" >
            <h2>Sign up</h2>
            <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>

              <div class="form-labels">
                <%= f.input :user_name,
                            required: true,
                            autofocus: false,
                            input_html: { autocomplete: "user_name" }%>
                <%= f.input :email,
                            required: true,
                            autofocus: false,
                            input_html: { autocomplete: "email" }%>
                <%= f.input :password,
                            required: true,
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password" } %>
                <%= f.input :password_confirmation,
                            required: true,
                            input_html: { autocomplete: "new-password" } %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Sign up", class: "btn primary-btn" %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="col-xs-12 col-sm-4" data-showhide-target="login">
          <div class="form-login overlay">
            <h2>Log in</h2>
            <%= simple_form_for(:user, :url => session_path(:user)) do |f| %>
              <%= f.error_notification %>

              <div class="form-labels">
                <%= f.input :email %>
                <%= f.input :password %>
                <%= f.label :remember_me %>
                <%= f.check_box :remember_me %>
              </div>
              <div class="form-actions">
                <%= f.submit 'Sign in', class: "btn primary-btn" %>
                <%= link_to "Forgot your password?", new_password_path(:user), class: "forgotten-password" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
